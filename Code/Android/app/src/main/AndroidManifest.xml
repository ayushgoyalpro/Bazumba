<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ayush.bazumba">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".activities.CourseHome"></activity>
        <activity android:name=".activities.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.Home"
            android:label="Home" />
        <activity
            android:name=".activities.Signup"
            android:label="@string/title_activity_signup" />
        <activity
            android:name=".activities.Login"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".activities.LoginSignup"
            android:label="@string/title_activity_login_signup" />
        <activity
            android:name=".activities.InfoPage3"
            android:label="@string/title_activity_info_page3" />
        <activity
            android:name=".activities.InfoPage2"
            android:label="@string/title_activity_info_page2" />
        <activity
            android:name=".activities.InfoPage1"
            android:label="@string/title_activity_info_page1" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>